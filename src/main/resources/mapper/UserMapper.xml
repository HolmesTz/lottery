<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzz.lottery.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.zzz.lottery.entity.User">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="phonenumber" jdbcType="VARCHAR" property="phonenumber" />
  </resultMap>
  <sql id="Base_Column_List">
    id, user_id, password, user_name, phonenumber
  </sql>
  <insert id="insert" parameterType="com.zzz.lottery.entity.User">
    insert into user (user_id, password,
      user_name, phonenumber)
    values (#{userId,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
      #{userName,jdbcType=VARCHAR}, #{phonenumber,jdbcType=VARCHAR})
  </insert>

  <select id="selectUser" resultMap="BaseResultMap">
    select * from user where phonenumber = #{password};
  </select>

</mapper>